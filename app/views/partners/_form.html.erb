<%= form_tag('/partners',
    :method => "get",
    :lat => @place_coord["lat"],
    :lng => @place_coord["lon"],
    :id => "geo-search") do |f| %>
  <%= text_field_tag :place %>
  <%= select_tag :radius,
        options_for_select([
          ["2km", "2"],
          ["5km", "5"],
          ["10km", "10"],
          ["20km", "20"],
          ["50km", "50"],
          ["100km", "100"]
        ]), {prompt: "Rayon"} %>
  <%= button_tag(type: "submit", id: "geoloc") do %>
    <i class="fas fa-map-marker-alt"></i>
  <% end %>
  <%= button_tag(type: "submit", id: "search-submit") do %>
    <i class="fas fa-search"></i>
  <% end %>

<% end %>
